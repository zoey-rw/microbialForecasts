	select(c_source, sugar_class, Sensitivity, Specificity, Precision, Recall, F1, Accuracy) %>% 
	pivot_longer(cols=c(Sensitivity, Specificity, Precision, Recall, F1, Accuracy), names_to = "metric")

p1 = ggplot(df, aes(y = reorder(c_source, sugar_class), x = genus_species)) + 
