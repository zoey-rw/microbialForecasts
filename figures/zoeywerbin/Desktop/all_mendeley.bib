publisher = {National Academy of Sciences},
title = {{Cross-biome metagenomic analyses of soil microbial communities and their functional attributes.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23236140 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3535587},
