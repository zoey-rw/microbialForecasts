eprint = {arXiv:1002.2562v1},
file = {:Users/zoeywerbin/Downloads/Todd-Brown2012{\_}Article{\_}AFrameworkForRepresentingMicro.pdf:pdf},
isbn = {0168-2563},
issn = {01682563},
journal = {Biogeochemistry},
keywords = {Coupled climate model,Decomposition,Global change,Microbial community,Soil carbon},
number = {1-3},
