issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {Exoenzymes,Hubbard brook experimental forest,Microbial biomass,Soil freeze-thaw cycle,Soil warming},
number = {February 2017},
pages = {39--47},
publisher = {Elsevier},
title = {{Winter soil freeze-thaw cycles lead to reductions in soil microbial biomass and activity not compensated for by soil warming}},
