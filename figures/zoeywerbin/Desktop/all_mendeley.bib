file = {:Users/zoeywerbin/Downloads/morepdfs/Hagen 2018 Age-dependent extinction (Syst Bio).pdf:pdf},
isbn = {1076-836X (Electronic) 1063-5157 (Linking)},
issn = {1076836X},
