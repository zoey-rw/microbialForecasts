author = {Karhu, Kristiina and Auffret, Marc D. and Dungait, Jennifer A.J. and Hopkins, David W. and Prosser, James I. and Singh, Brajesh K. and Subke, Jens Arne and Wookey, Philip A. and Agren, G{\"{o}}ran I. and Sebasti{\`{a}}, Maria Teresa and Gouriveau, Fabrice and Bergkvist, G{\"{o}}ran and Meir, Patrick and Nottingham, Andrew T. and Salinas, Norma and Hartley, Iain P.},
