issn = {1091-6490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Ecosystem,Microbiology,Models, Theoretical,Phylogeny,Species Specificity},
number = {Supplement{\_}1},
pages = {11512--9},
pmid = {18695234},
title = {{Colloquium paper: resistance, resilience, and redundancy in microbial communities.}},
